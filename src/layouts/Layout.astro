---
import "../styles/global.css";

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <header class="bg-white shadow-md">
      <nav class="container mx-auto flex justify-between items-center p-4">
        <div class="text-xl font-bold">Mon Site</div>
        <div class="space-x-4">
          <a href="/" class="text-gray-700 hover:text-blue-500">Accueil</a>
          <a href="/personnes/" class="text-gray-700 hover:text-blue-500"
            >Liste des personnes</a
          >
          <a href="/films/" class="text-gray-700 hover:text-blue-500"
            >Liste des films</a
          >
          <a href="/auth-password/" class="text-gray-700 hover:text-blue-500"
            >Connexion mdp</a
          >
          <a href="/auth-github/" class="text-gray-700 hover:text-blue-500"
            >Connexion OAUTH2</a
          >
          <a href="/personnes/edit" class="text-gray-700 hover:text-blue-500"
            >Ajouter personne</a
          >
        </div>
      </nav>
    </header>
    <main class="container mx-auto p-4">
      <slot />
    </main>
  </body>
</html>
